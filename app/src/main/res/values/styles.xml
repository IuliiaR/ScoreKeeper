<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <!-- Background image styles-->
    <style name="bg_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Logo styles-->
    <style name="logo_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/layout_logo_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Team layout styles-->
    <style name="team_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/layout_team_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Team title styles-->
    <style name="team_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/team_title_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Team score styles-->
    <style name="team_score">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_score_marginBottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorScore</item>
        <item name="android:textSize">@dimen/team_score_text_size</item>
    </style>

    <!-- Button's style-->
    <style name="score_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/score_buttons_marginBottom</item>
    </style>

    <!-- Reset button's style-->
    <style name="reset_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/reset_button_marginBottom</item>
    </style>

</resources>
